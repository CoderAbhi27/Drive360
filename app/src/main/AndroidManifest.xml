<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/logo_drive360"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.SAGARMILES"
        tools:targetApi="31">

        <activity
            android:name="com.example.drive360.Activity.YourOrdersActivity"
            android:exported="false" />
        <activity
            android:name="com.example.drive360.Activity.YourRidesActivity"
            android:exported="false" />
        <activity
            android:name="com.example.drive360.Activity.HiredDriverProfileActivity"
            android:exported="false" />
        <activity
            android:name="com.example.drive360.Activity.splashScreen"
            android:exported="true"
            android:theme="@style/Theme.MaterialComponents.DayNight.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.drive360.Activity.FuelTrackingOrderActivity"
            android:exported="false" />
        <activity
            android:name="com.example.drive360.Activity.BookRidePaymentActivity"
            android:exported="false" />
        <activity
            android:name="com.example.drive360.Activity.BookRideActivity"
            android:exported="false" />
        <activity
            android:name="com.example.drive360.Activity.YourDriversActivity"
            android:exported="false" />
        <activity
            android:name="com.example.drive360.Activity.PaymentActivity"
            android:exported="false" />
        <activity
            android:name="com.example.drive360.Activity.DriverProfileActivity"
            android:exported="false" />
        <activity
            android:name="com.example.drive360.Activity.ExploreDrivers"
            android:exported="false" />
        <activity
            android:name="com.example.drive360.Activity.CreateProfile"
            android:exported="false" />
        <activity
            android:name="com.example.drive360.Activity.LoginActivity"
            android:exported="false" />
        <activity
            android:name="com.example.drive360.Activity.MainActivity"
            android:exported="false" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>