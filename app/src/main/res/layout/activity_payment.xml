<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="HIRE NOW!"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textAlignment="center"/>
    <!-- Driver Details -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Driver Details:"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/driverCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Driver Code" />

    <TextView
        android:id="@+id/driverName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Driver Name" />

<!--    <TextView-->
<!--        android:id="@+id/driverType"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:text="Driver Type" />-->

    <TextView
        android:id="@+id/driverAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Driver Address" />

    <TextView
        android:id="@+id/driverSalary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Driver Salary" />


    <!-- Payment Options -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Select Payment Method"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/hiringFee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:text="Hiring Fee = rsxxxx" />

    <RadioGroup
        android:id="@+id/paymentOptionsRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/upiOption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UPI" />

        <!--<RadioButton
            android:id="@+id/cardOption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Credit/Debit Card" />

        <RadioButton
            android:id="@+id/netbankingOption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Netbanking" />-->
    </RadioGroup>

    <!-- Proceed Button -->
    <Button
        android:id="@+id/proceedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:text="Proceed to Payment" />

</LinearLayout>
