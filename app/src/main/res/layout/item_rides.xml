<!-- ride_booking_item.xml -->

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="15dp"
    app:cardCornerRadius="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/textName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name: abc xyz"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone no: +91"
            android:textSize="14sp"
            android:textColor="#888888"/>

        <TextView
            android:id="@+id/textPickupAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pickup: "
            android:textSize="14sp"
            android:textColor="#888888"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/textDestinationAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Destination: "
            android:textSize="14sp"
            android:textColor="#888888"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/textFromDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="From: dd-mm-yyyy"
            android:textSize="14sp"
            android:textColor="#888888"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/textToDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="To: dd-mm-yyyy"
            android:textSize="14sp"
            android:textColor="#888888"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/textPaymentMethod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payment Method: cash"
            android:textSize="14sp"
            android:textColor="#888888"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/textAmountDue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Amount Due: â‚¹xx"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>
