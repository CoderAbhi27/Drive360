<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/profilePicture"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/edit_text_border"
        android:src="@drawable/profile"/>

    <TextView
        android:id="@+id/myNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/driverImageView"
        android:layout_marginTop="35dp"
        android:layout_marginStart="16dp"
        android:text="Name: Abhinav Kumar"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/myPhnoTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/driverImageView"
        android:layout_marginTop="12dp"
        android:layout_marginStart="16dp"
        android:text="Phone no.: +919162274063"
        android:textSize="20sp"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/locationTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/driverImageView"
        android:layout_marginTop="12dp"
        android:layout_marginStart="16dp"
        android:text="location: Dhanbad"
        android:textSize="20sp"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/userAgeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/driverImageView"
        android:layout_marginTop="12dp"
        android:layout_marginStart="16dp"
        android:text="Age: 20"
        android:textSize="20sp"
        android:textColor="@android:color/black"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/yourDriversButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/certificateImageView"
        android:layout_marginTop="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:textSize="23sp"
        android:textStyle="bold"
        android:background="@color/purple_200"
        android:text="Your drivers"/>

</LinearLayout>
